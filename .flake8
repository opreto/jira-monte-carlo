[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg
ignore = 
    # Allow trailing whitespace in comments
    W291,
    # Allow blank lines with whitespace
    W293,
    # Don't require two blank lines between functions
    E302,
    # Allow lambda assignments
    E731
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py:F401
    # Allow long lines in tests
    test_*.py:E501